    "version": "0.2.0",
    "configurations": [
        {
            "name": "textureterm",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/prefix/bin/textureterm.exe",
            "args": [
                "${env:USERPROFILE}/.fonts/HackGenNerdConsole-Regular.ttf",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "termtexture_imgui",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/prefix/bin/termtexture_imgui.exe",
            "args": [
                "${env:USERPROFILE}/.fonts/HackGenNerdConsole-Regular.ttf",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal"
        },
    ]
}